@model Vnexpress.Models.Article

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Views/Shared/trangchu.cshtml";
}

<link href="~/Content/Mycss/SqlDelete.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet" />

<h2>Xóa</h2>
<div class="delete-container">
    <h4>Thông tin bài viết</h4>
    <table class="table">
        <tr>
            <th>Title</th>
            <td>@Html.DisplayFor(model => model.Title)</td>
        </tr>
        <tr>
            <th>Summary</th>
            <td>@Html.DisplayFor(model => model.Summary)</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>@Html.DisplayFor(model => model.Content)</td>
        </tr>
        <tr>
            <th>ImageUrl</th>
            <td>@Html.DisplayFor(model => model.ImageUrl)</td>
        </tr>
        <tr>
            <th>CategoryId</th>
            <td>@Html.DisplayFor(model => model.CategoryId)</td>
        </tr>
        <tr>
            <th>UserId</th>
            <td>@Html.DisplayFor(model => model.UserId)</td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <input type="submit" value="Xóa" class="btn btn-delete" />
            @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-back" })
        </div>
    }
</div>