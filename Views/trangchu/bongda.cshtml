<script>document.addEventListener('DOMContentLoaded', function() {
        const scheduleContainer = document.querySelector('.lichthidaubongda-header');
        const leftArrow = document.querySelector('.left-arrow');
        const rightArrow = document.querySelector('.right-arrow');

        // Hàm cuộn
        function scrollSchedule(direction) {
            // Lấy chiều rộng của một cột lịch (min-width của .lichthidau)
            const scrollAmount = document.querySelector('.lichthidau').offsetWidth;

            if (direction === 'left') {
                scheduleContainer.scrollBy({
                    left: -scrollAmount,
                    behavior: 'smooth'
                });
            } else if (direction === 'right') {
                scheduleContainer.scrollBy({
                    left: scrollAmount,
                    behavior: 'smooth'
                });
            }
        }

        // Lắng nghe sự kiện click
        leftArrow.addEventListener('click', function() {
            scrollSchedule('left');
        });

        rightArrow.addEventListener('click', function() {
            scrollSchedule('right');
        });

        // Tùy chọn: Ẩn/hiện mũi tên nếu không còn nội dung để cuộn
        function toggleArrows() {
            if (scheduleContainer.scrollWidth <= scheduleContainer.clientWidth) {
                // Nếu không có nội dung để cuộn, ẩn cả hai mũi tên
                leftArrow.style.display = 'none';
                rightArrow.style.display = 'none';
            } else {
                leftArrow.style.display = 'flex'; // Dùng flex để căn giữa mũi tên
                rightArrow.style.display = 'flex';

                if (scheduleContainer.scrollLeft === 0) {
                    leftArrow.style.opacity = '0.5'; // Làm mờ mũi tên trái khi ở đầu
                    leftArrow.style.cursor = 'default';
                } else {
                    leftArrow.style.opacity = '1';
                    leftArrow.style.cursor = 'pointer';
                }

                if (scheduleContainer.scrollLeft + scheduleContainer.clientWidth >= scheduleContainer.scrollWidth - 1) {
                    rightArrow.style.opacity = '0.5'; // Làm mờ mũi tên phải khi ở cuối
                    rightArrow.style.cursor = 'default';
                } else {
                    rightArrow.style.opacity = '1';
                    rightArrow.style.cursor = 'pointer';
                }
            }
        }

        // Gọi hàm kiểm tra ban đầu và khi cuộn
        toggleArrows();
        scheduleContainer.addEventListener('scroll', toggleArrows);
        window.addEventListener('resize', toggleArrows); // Kiểm tra lại khi thay đổi kích thước cửa sổ
    });</script>
